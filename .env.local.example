# This is an example .env.local file for local development
# Copy this to .env.local and fill in your values

# Database (Required)
# For local PostgreSQL:
DATABASE_URL="postgresql://postgres:password@localhost:5432/banking_db?schema=public"

# For Vercel Postgres (Production):
# Get this from your Vercel dashboard under Storage > Postgres
# DATABASE_URL="postgres://default:password@host.postgres.vercel-storage.com:5432/verceldb?sslmode=require"

# NextAuth Configuration (Required)
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-min-32-characters-long-change-this"

# App Configuration
NEXT_PUBLIC_APP_NAME="Modern Banking System"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Bank Configuration
NEXT_PUBLIC_BANK_IFSC="BNKJ0001011"
NEXT_PUBLIC_BANK_BRANCH="Main Branch"

# Optional: Email Service (Resend)
# Get API key from: https://resend.com
# RESEND_API_KEY="re_123456789"

# Optional: SMS Service (Twilio)
# Get credentials from: https://twilio.com
# TWILIO_ACCOUNT_SID="ACxxxxx"
# TWILIO_AUTH_TOKEN="your_auth_token"
# TWILIO_PHONE_NUMBER="+1234567890"

# Optional: Error Tracking (Sentry)
# SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"

# Optional: Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
